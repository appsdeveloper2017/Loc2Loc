<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="texto_app">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Splash screen -->
    <!--<style name="splash_theme" parent="Theme.AppCompat.Light.NoActionBar">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    <!--</style>-->

    <style name="titulo_splash" parent="texto_app">
        <item name="android:textSize">@dimen/title_splash</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="subtitulo_splash" parent="titulo_splash">
        <item name="android:textSize">@dimen/subtitle_splash</item>
    </style>

    <!-- Login screen-->
    <style name="register_text">
        <item name="android:textSize">@dimen/register_text_size</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Edit profile screen -->
    <style name="edit_profile_text">
        <item name="android:textSize">@dimen/register_text_size</item>
    </style>
    <style name="edit_profile_text.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog -->
    <style name="dialog_text" parent="texto_app">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="dialog_text.bold">
        <item name="android:textStyle">bold</item>
    </style>
    <!--Structure basic for a layout-->
    <style name="estructura">
        <item name="android:layout_margin">@dimen/large_margin</item>
    </style>
    
</resources>
