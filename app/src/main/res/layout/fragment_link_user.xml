<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Frag_Link_User"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuOptionsFloatBar.FragmentLinkUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_link"
            android:layout_width="match_parent"
            android:layout_height="@dimen/nav_header_height"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="@string/link"
                android:textSize="@dimen/size_title_user_link" />

            <EditText
                android:id="@+id/buscar_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_edittext_states"
                android:hint="@string/search"
                android:inputType="textAutoComplete"
                android:paddingStart="@dimen/xlarge_margin"/>

            <View
                android:id="@+id/separator_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/line"
                android:layout_marginEnd="@dimen/large_margin"
                android:layout_marginStart="@dimen/large_margin"
                android:background="@color/soft_grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/soft_grey">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>